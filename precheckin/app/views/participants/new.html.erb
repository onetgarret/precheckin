

<%= stylesheet_link_tag 'scaffold', 'foundation'%>
<center>
<table cellpadding="0" cellspacing="0" width="666" border="0" bgcolor="white">
<TR>
<td colspan="2" height="20">
</td>
</tr>
<TR>
<td><%= image_tag("inThePocket.jpg", :alt => "Main") %>
</td>
</tr>
<tr height="40">
<td class="white"><h2>Please fill out the information below to make your check in process faster.</h2>
	* Required Fields
	</td>
</tr>
<tr>
<td class="white">	<% form_for(@participant) do |f| %>
	  <%= f.error_messages %>

	  <p>
	    <%= "*First Name" %><br />
	    <%= f.text_field :firstName %>
	  </p>
	  <p>
	    <%= "*Last Name" %><br />
	    <%= f.text_field :lastName %>
	  </p>
	  <p>
	    <%="*Street" %><br />
	    <%= f.text_field :address %>
	  </p>
	  <p>
	    <%= "Street (line 2)" %><br />
	    <%= f.text_field :address2 %>
	  </p>
	  <p>
	    <%= "*City" %><br />
	    <%= f.text_field :city %>
	  </p>
	  <p>
	    <%= "*State" %><br />
	    <%= f.select :state, Participant::STATE_NAMES, :selected => 'PA'  %>
	  </p>	
	  <p>
	    <%= "*Zip" %><br />
	    <%= f.text_field :zip %>
	  </p>
	  <p>
	    <%= "*E-mail" %><br />
	    <%= f.text_field :email %>
	  </p>
	   <p>
		 <%= f.check_box :subscribe %>
	    <%= "Check to receive email notifications from The Best of the Batch Foundation" %>
	   <!-- Needs to add e-mail address to a folder with emails -->
	
	
	  </p>
	
	
	<p>
		<%= "How many times have you attended this event?" %>
    	<%= f.select :attendance, (["0", "1", "2", "More than 2"]) %>
	</p>
	<h3>Game Ranking</h3>
	<div width="400" style="margin-left:20px;">
	  <p>
	    <%= "First Choice"%><br />
	    <%= f.select :ranking, (["Pool","Ping-Pong","Poker"]) %>
	  </p>
	  <p>
	    <%= "Second Choice" %><br />
	     <%= f.select :ranking2, (["Pool","Ping-Pong","Poker"]) %>
	  </p>
	  <p>
	    <%= 'Third Choice' %><br />
	     <%= f.select :ranking3, (["Pool","Ping-Pong","Poker"]) %>
	  </p>
	</div>
	
	
	
	
	<hr>
	<p>
		<b>* Privacy Information:</b> This information is private and will only be used for private purposes.
	</p>
	<p>
		<b>* Note:</b> Submitted information can be changed at the door.
	</p>
	<hr>
	  <p>
	    <%= f.submit 'Submit' %>
	  </p>
	<% end %>

	
</td>
</tr>
<tr>
<td>
</td>
</tr>


</table>

<%= render :partial => "partials/footer" %>





